{
  "$schema": "https://mintlify.com/schema.json",

  "name": "next-forge docs",

  "logo": {
    "dark": "/images/logo-dark.svg",
    "light": "/images/logo-light.svg"
  },

  "background": { "style": "windows" },

  "codeBlock": {
    "mode": "auto"
  },

  "favicon": "/images/icon.png",

  "layout": "topnav",

  "colors": {
    "primary": "#f35815",
    "light": "#f35815",
    "dark": "#f35815",
    "anchors": {
      "from": "#f35815",
      "to": "#f35815"
    }
  },

  "topbarCtaButton": {
    "type": "github",
    "url": "https://github.com/haydenbleasel/next-forge"
  },

  "search": {
    "prompt": "Search or ask..."
  },

  "tabs": [
    {
      "name": "Getting Started",
      "url": "/"
    },
    {
      "name": "Apps",
      "url": "/apps"
    },
    {
      "name": "Packages",
      "url": "/packages"
    },
    {
      "name": "Recipes",
      "url": "/recipes"
    },
    {
      "name": "Migrations",
      "url": "/migrations"
    },
    {
      "name": "Addons",
      "url": "/addons"
    }
  ],

  "navigation": [
    {
      "group": "Introduction",
      "pages": ["overview", "philosophy", "structure", "updates", "faq"]
    },
    {
      "group": "Setup",
      "pages": ["setup/prerequisites", "setup/installation", "setup/env"]
    },
    {
      "group": "",
      "pages": [
        "apps/api",
        "apps/app",
        "apps/docs",
        "apps/email",
        "apps/storybook",
        "apps/studio",
        "apps/web"
      ]
    },
    {
      "group": "",
      "pages": [
        "packages/ai",
        {
          "group": "Analytics",
          "pages": ["packages/analytics/web", "packages/analytics/product"]
        },
        "packages/authentication",
        "packages/cms",
        "packages/collaboration",
        "packages/cron",
        "packages/database",
        {
          "group": "Design System",
          "pages": [
            "packages/design-system/colors",
            "packages/design-system/components",
            "packages/design-system/dark-mode",
            "packages/design-system/provider",
            "packages/design-system/typography"
