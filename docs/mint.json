        {
          "group": "SEO",
          "pages": [
            "packages/seo/metadata",
            "packages/seo/json-ld",
            "packages/seo/sitemap"
          ]
        },
        "packages/storage",
        "packages/tailwind-config",
        "packages/testing",
        "packages/toolbar",
        "packages/webhooks"
      ]
    },
    {
      "group": "Authentication",
      "pages": [
        "migrations/authentication/authjs",
        "migrations/authentication/better-auth"
      ]
