    },
    {
      "source": "/database/supabase",
      "destination": "/migrations/database/supabase"
    },
    {
      "source": "/database/turso",
      "destination": "/migrations/database/turso"
    },
    {
      "source": "/design-system/:slug*",
      "destination": "/packages/design-system/:slug*"
