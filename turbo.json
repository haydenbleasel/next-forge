{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "SEGMENT_WRITE_KEY",
    "STRIPE_SECRET_KEY",
    "RESEND_TOKEN",
    "BETTERSTACK_URL",
    "BETTERSTACK_API_KEY",
    "DATABASE_URL",
    "RESEND_FROM",
    "OPENAI_API_KEY",
    "CLERK_WEBHOOK_SECRET"
  ]
}
